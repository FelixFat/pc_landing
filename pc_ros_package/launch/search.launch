<launch>
    <arg name="path"        default="/home/pi"/>
    <arg name="width"       default="424"/>
    <arg name="height"      default="420"/>
    <arg name="fps"         default="6"/>
    
    <!-- Launch to mapping launch file video_map -->
    <include file="$(find pc_landing)/launch/video_map.launch">
        <arg name="path"    value="$(arg path)"/>
    </include>
    
    <!-- Start search -->
    <node pkg="pc_landing" type="pc_detection_SLZ" name="detection_slz"/>
    <node pkg="pc_landing" type="pc_search_point" name="search_point"/>
</launch>
